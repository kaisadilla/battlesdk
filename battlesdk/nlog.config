<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    autoReload="true"
    internalLogLevel="Off"
    internalLogFile="internal-nlog.txt"
>

    <targets>
        <target
            name="logfile"
            xsi:type="File"
            fileName="logs/logfile_${shortdate}_${time}.txt"
            layout="[${longdate}] ${level:uppercase=true} | ${logger}${newline} ${message} ${exception:format=toString}"
        />

        <target
            name="logconsole"
            xsi:type="Console"
            layout="${date:format=HH\:mm\:ss} [${level:uppercase=true}] ${logger:shortName=true} | ${message}"
        />
    </targets>

    <rules>
        <logger name="*" minlevel="Debug" writeTo="logfile,logconsole" />
    </rules>
</nlog>